<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
    <title>
        Edit task {{task.id_name}}
    </title>
</head>

<body>
    {{> header}}
    <main role="main" class="container">
        <fieldset>
            <form action="/tasks/update/{{task.id}}" method="post" enctype="multipart/form-data">
                <!-- Form Name -->
                <legend>
                    <p class="lead">
                        Edit task <b>{{ task.id_name }}</b>
                    </p>
                </legend>

                <!-- Text input -->
                <div class="form-group">
                    <label class="col-md-5 control-label" for="name">Course name</label>
                    <div class="col-md-4">
                        <input disabled name="course_name" value="{{task.course.name}}" type="text" class="form-control input-md"
                            required />
                    </div>
                </div>

                <!-- Text input -->
                <div class="form-group">
                    <label class="col-md-5 control-label" for="name">Task name</label>
                    <div class="col-md-4">
                        <input value="{{task.name}}" name="task_name" type="text" placeholder="Enter new task name"
                            class="form-control input-md" required autofocus />
                    </div>
                </div>

                <!-- Text input -->
                <div class="form-group">
                    <label class="col-md-5 control-label" for="id_name">Task identifier</label>
                    <div class="col-md-4">
                        <input value="{{task.id_name}}" name="task_id_name" type="text" placeholder="Enter new taks identifier"
                            class="form-control input-md" required pattern="[a-zA-Z0-9_]+" />
                    </div>
                </div>

                <div class="col-md-4 form-group files color">
                    <label>Condition file</label>
                    <input type="file" accept=".html, .txt, .md" name="condition" class="form-control" />
                </div>
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">
                    Edit
                </button>
            </form>
        </fieldset>
    </main>

    {{> footer}} {{> scripts}}
</body>

</html>